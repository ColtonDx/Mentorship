#!/bin/bash

# Enable IP forwarding
echo "net.ipv4.ip_forward=1" | sudo tee -a /etc/sysctl.conf

# Apply the changes
sudo sysctl -p

# Setup NAT for internet access
sudo iptables -t nat -A POSTROUTING -o eth0 -j MASQUERADE

# Setup port forwarding from public IP to 10.0.1.4 on port 80
sudo iptables -t nat -A PREROUTING -p tcp --dport 80 -j DNAT --to-destination 10.0.1.4:80
sudo iptables -t nat -A POSTROUTING -p tcp -d 10.0.1.4 --dport 80 -j MASQUERADE

# Save the iptables rules
sudo mkdir -p /etc/iptables
sudo iptables-save | sudo tee /etc/iptables/rules.v4

sudo curl -L https://raw.githubusercontent.com/ColtonDx/Mentorship/Router/Routing/iptables-service -o /etc/systemd/system/iptables-restore.service

sudo systemctl daemon-reload
sudo systemctl enable iptables-restore.service
sudo systemctl restart iptabes-restore.service
